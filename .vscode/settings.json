{
    "latex-workshop.latex.search.rootFiles.include": [
        "**/*.tex",
        "**/*.dtx"
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "xelatex(dtx)",
            "command": "xelatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOCFILE%.dtx"
            ],
            "env": {}
        },
        {
            "name": "makeindex(glo)",
            "command": "makeindex",
            "args": [
                "-s",
                "gglo.ist",
                "-o",
                "%DOCFILE%.gls",
                "%DOCFILE%.glo"
            ],
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "Build dtx",
            "tools": [
                "xelatex(dtx)",
                "makeindex(glo)",
                "xelatex(dtx)",
                "xelatex(dtx)"
            ]
        }
    ]
}
