{
    "latex-workshop.latex.search.rootFiles.include": [
        "**/*.tex",
        "**/*.dtx",
        "**/*.ins"
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "xetex(ins only)",
            "command": "xetex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOCFILE%.ins"
            ],
            "env": {}
        },
        {
            "name": "xelatex(dtx only)",
            "command": "xelatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOCFILE%.dtx"
            ],
            "env": {}
        },
        {
            "name": "makeindex",
            "command": "makeindex",
            "args": [
                "-s",
                "gglo.ist",
                "-o",
                "%DOCFILE%.gls",
                "%DOCFILE%.glo"
            ],
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "Build dtx",
            "tools": [
                "xetex(ins only)",
                "xelatex(dtx only)",
                "makeindex",
                "xelatex(dtx only)",
                "xelatex(dtx only)"
            ]
        }
    ]
}
